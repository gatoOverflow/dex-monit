{
  "name": "@dex-monit/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev:api": "nx serve monitoring-api",
    "dev:web": "nx dev monitoring-web",
    "dev": "nx run-many --target=serve,dev --projects=monitoring-api,monitoring-web --parallel",
    "build": "nx run-many --target=build --all",
    "build:api": "nx build monitoring-api",
    "build:web": "nx build monitoring-web",
    "typecheck": "nx run-many --target=typecheck --all",
    "lint": "nx run-many --target=lint --all",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,js,jsx,json}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:api": "jest --selectProjects monitoring-api"
  },
  "private": true,
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@nx/js": "22.3.3",
    "@nx/nest": "^22.3.3",
    "@nx/next": "^22.3.3",
    "@nx/node": "^22.3.3",
    "@nx/react": "^22.3.3",
    "@nx/web": "22.3.3",
    "@nx/webpack": "22.3.3",
    "@prisma/client": "^5.22.0",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.8",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/uuid": "^10.0.0",
    "jest": "^30.2.0",
    "nx": "22.3.3",
    "prettier": "~3.6.2",
    "prisma": "^5.22.0",
    "ts-jest": "^29.4.6",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "verdaccio": "^6.0.5",
    "webpack-cli": "^5.1.4"
  },
  "workspaces": [
    "packages/*",
    "packages/observability/*"
  ],
  "dependencies": {
    "@nestjs/common": "^11.1.11",
    "@nestjs/core": "^11.1.11",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.11",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "bcryptjs": "^3.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "jsonwebtoken": "^9.0.3",
    "next": "~16.0.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pino": "^10.1.1",
    "pino-pretty": "^13.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "uuid": "^13.0.0"
  },
  "nx": {
    "includedScripts": [],
    "targets": {
      "local-registry": {
        "executor": "@nx/js:verdaccio",
        "options": {
          "port": 4873,
          "config": ".verdaccio/config.yml",
          "storage": "tmp/local-registry/storage"
        }
      }
    }
  }
}
