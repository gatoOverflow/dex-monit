# ============================================
# DEX-MONIT WEB - Production Dockerfile
# Place this at ROOT of repo for Dokploy
# ============================================

# Build stage
FROM node:20-alpine AS builder

WORKDIR /app

# Install dependencies first (better caching)
COPY package*.json ./
COPY nx.json ./
COPY tsconfig*.json ./

# Copy workspace packages
COPY packages/monitoring-web ./packages/monitoring-web

# Install all dependencies
RUN npm ci --legacy-peer-deps

# API URL for production - change this for your deployment
ARG NEXT_PUBLIC_API_URL=https://monit-api.cloud.dexchange.group/api
ENV NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL}

# Registration control - set to 'true' to enable registration
ARG NEXT_PUBLIC_REGISTRATION_ENABLED=false
ENV NEXT_PUBLIC_REGISTRATION_ENABLED=${NEXT_PUBLIC_REGISTRATION_ENABLED}

# Sync workspace and build the Web app
RUN npx nx sync --verbose || true
RUN npx nx build monitoring-web --configuration=production --skip-nx-cache

# Production stage
FROM node:20-alpine AS production

WORKDIR /app

ENV NODE_ENV=production
ENV PORT=4200
ENV HOSTNAME=0.0.0.0

# Copy built Next.js standalone output
COPY --from=builder /app/packages/monitoring-web/.next/standalone ./
COPY --from=builder /app/packages/monitoring-web/.next/static ./packages/monitoring-web/.next/static
COPY --from=builder /app/packages/monitoring-web/public ./packages/monitoring-web/public

# Health check disabled for debugging
# HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
#   CMD wget --no-verbose --tries=1 --spider http://localhost:${PORT} || exit 1

EXPOSE 4200

# Run Next.js - the server reads PORT and HOSTNAME from env
CMD ["node", "packages/monitoring-web/server.js"]
