# ============================================
# DEX-MONIT WEB - Production Dockerfile
# ============================================

# Build stage
FROM node:20-alpine AS builder

WORKDIR /app

# Install dependencies
COPY package*.json ./
COPY nx.json ./
COPY tsconfig*.json ./

# Copy workspace packages
COPY packages/monitoring-web ./packages/monitoring-web

# Install all dependencies
RUN npm ci --legacy-peer-deps

# Build argument for API URL
ARG NEXT_PUBLIC_API_URL
ENV NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL}

# Build the Web app
RUN npx nx build monitoring-web --configuration=production

# Production stage
FROM node:20-alpine AS production

WORKDIR /app

# Install only production dependencies for Next.js
RUN npm install -g next@14

# Copy built application
COPY --from=builder /app/packages/monitoring-web/.next ./.next
COPY --from=builder /app/packages/monitoring-web/public ./public
COPY --from=builder /app/packages/monitoring-web/package.json ./package.json
COPY --from=builder /app/packages/monitoring-web/next.config.js ./next.config.js 2>/dev/null || true

# Install production deps
RUN npm install --only=production --legacy-peer-deps next@14 react react-dom

# Environment
ENV NODE_ENV=production
ENV PORT=4200

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:4200 || exit 1

EXPOSE 4200

# Run Next.js in production mode
CMD ["npx", "next", "start", "-p", "4200"]
