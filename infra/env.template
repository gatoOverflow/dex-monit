# ============================================
# DEX-MONIT - Environment Variables Template
# Copy this file to .env and fill in the values
# ============================================

# ===================
# Application
# ===================
NODE_ENV=production
APP_URL=https://api.dex-monit.com
FRONTEND_URL=https://dex-monit.com

# ===================
# API Configuration
# ===================
API_PORT=3000
WEB_PORT=4200
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=7d

# ===================
# PostgreSQL (Config Database)
# ===================
# If using external PostgreSQL (recommended for Dokploy)
DATABASE_URL=postgresql://user:password@host:5432/dex_monitoring

# If using local PostgreSQL container
POSTGRES_USER=dex
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=dex_monitoring
POSTGRES_EXTERNAL_PORT=5432

# ===================
# ClickHouse (Time-Series Database)
# ===================
CLICKHOUSE_ENABLED=true
CLICKHOUSE_HOST=your-clickhouse-host.traefik.me
CLICKHOUSE_PORT=8443
CLICKHOUSE_DATABASE=dex_monitoring
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=your-clickhouse-password
CLICKHOUSE_PROTOCOL=https

# ===================
# Redis (Cache & Queues)
# ===================
REDIS_ENABLED=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_EXTERNAL_PORT=6379

# ===================
# Async Ingestion (requires Redis)
# ===================
ASYNC_INGESTION=true

# ===================
# Frontend
# ===================
NEXT_PUBLIC_API_URL=https://api.dex-monit.com/api

# ===================
# Optional: Email (SMTP)
# ===================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@dex-monit.com

# ===================
# Optional: Slack Integration
# ===================
SLACK_WEBHOOK_URL=
SLACK_DEFAULT_CHANNEL=#alerts
