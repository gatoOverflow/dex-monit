{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "baseUrl": ".",
    "paths": {
      "@dex-monit/observability-contracts": ["packages/observability/contracts/src/index.ts"],
      "@dex-monit/observability-request-context": ["packages/observability/request-context/src/index.ts"],
      "@dex-monit/observability-scrubber": ["packages/observability/scrubber/src/index.ts"],
      "@dex-monit/observability-logger": ["packages/observability/logger/src/index.ts"],
      "@dex-monit/observability-sdk-node": ["packages/observability/sdk-node/src/index.ts"]
    }
  }
}
